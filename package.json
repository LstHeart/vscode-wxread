{
  "name": "vscode-wxread",
  "displayName": "微信读书",
  "description": "微信读书插件",
  "version": "0.0.12",
  "engines": {
    "vscode": "^1.51.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/LstHeart/vscode-wxread.git"
  },
  "publisher": "lstheart",
  "license": "MIT",
  "keywords": [
    "微信读书",
    "微信阅读",
    "阅读",
    "wxread",
    "wx",
    "weread"
  ],
  "icon": "resources/logo.png",
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "wxread.start",
        "title": "wxread"
      }
    ],
    "configuration": {
      "properties": {
        "vscode-wxread.proxyPort": {
          "type": "number",
          "default": 9661,
          "description": "代理服务端口"
        },
        "vscode-wxread.showStatusBarItem": {
          "type": "boolean",
          "default": true,
          "description": "状态栏显示微信读书图标"
        },
        "vscode-wxread.showPanelIcon": {
          "type": "boolean",
          "default": true,
          "description": "标签页显示logo"
        },
        "vscode-wxread.panelTitle": {
          "type": "string",
          "default": "微信读书",
          "description": "标签页标题"
        }
      }
    }
  },
  "scripts": {
    "prepare": "husky install",
    "vscode:prepublish": "yarn run build-webpack",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "watch": "webpack -c ./build/webpack.config.js --watch",
    "build": "yarn run esbuild-base --minify",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "release": "standard-version -a",
    "package": "vsce package --no-yarn",
    "publish": "vsce publish --no-yarn",
    "build-webpack": "webpack -c ./build/webpack.config.js",
    "build-esbuild": "node ./build/esbuild.config.js",
    "build-vite": "vite build -c ./build/vite.config.js",
    "build-rollup": "yarn run rollup -c ./build/rollup.config.js"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json}": [
      "prettier --write",
      "eslint"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@swc/core": "^1.2.179",
    "@types/glob": "^7.2.0",
    "@types/koa": "^2.13.4",
    "@types/mocha": "^9.1.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.51.0",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "@vscode/test-electron": "^2.1.3",
    "connect": "^3.7.0",
    "esbuild": "^0.14.38",
    "esbuild-loader": "^2.18.0",
    "esbuild-plugin-clean": "^0.9.0",
    "eslint": "^8.14.0",
    "get-port": "^6.1.2",
    "glob": "^7.2.0",
    "http-proxy-middleware": "^2.0.6",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.1",
    "mocha": "^9.2.2",
    "prettier": "^2.6.2",
    "rollup": "^2.72.1",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-esbuild": "^4.9.1",
    "rollup-plugin-swc3": "^0.3.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-visualizer": "^5.6.0",
    "standard-version": "^9.3.2",
    "typescript": "^4.5.5",
    "umi-request": "^1.4.0",
    "vite": "^2.9.8",
    "vsce": "^2.7.0",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "undici": "^5.5.1"
  }
}
